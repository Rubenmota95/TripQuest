<div class="container mt-4" style="width: 400px">
  <h1>Ja visitas-te <%= @place.name %>? DÃ¡-nos uma review!</h1>
  <%= simple_form_for([@place, @comment]) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :username, label: 'Your Name', placeholder: 'Your Name' %>
      <%= f.input :text, label: 'Review Text', placeholder: 'Write your review here', as: :text, input_html: { rows: 5 } %>
      <%= f.input :rating, label: 'Rating', collection: 1..5, as: :select, include_blank: false %>
    </div>

    <div class="form-actions d-flex justify-content-between mt-4">
      <div class="d-flex align-items-center">
        <%= link_to "Cancel", place_path(@place), class: "btn btn-danger", style: "width: 129px; height: 40px" %>
      </div>
      <div>
        <%= f.button :submit, class: "btn btn-success", style: "width: 129px; height: 40px", data: { disable_with: 'Creating...' } do %>
          Create
        <% end %>
      </div>
    </div>
  <% end %>
</div>
